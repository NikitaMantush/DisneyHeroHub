<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/heroListFragment">

    <fragment
        android:id="@+id/heroListFragment"
        android:name="com.mantushnikita.disneyherohub3.ui.list.HeroListFragment"
        android:label="HeroListFragment"
        tools:layout="@layout/fragment_hero_list">
        <action
            android:id="@+id/action_heroListFragment_to_heroFragment"
            app:destination="@id/heroFragment" />
    </fragment>
    <fragment
        android:id="@+id/heroFragment"
        android:name="com.mantushnikita.disneyherohub3.ui.hero.HeroFragment"
        android:label="HeroFragment"
        tools:layout="@layout/fragment_hero">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>
